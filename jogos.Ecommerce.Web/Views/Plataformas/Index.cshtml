@model IEnumerable<jogos.Ecommerce.Web.ViewModel.Plataforma.PlataformaIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePlataforma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fabricante)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NomePlataforma)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fabricante)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.IdPlataforma }) |
        @Html.ActionLink("Details", "Details", new { id = item.IdPlataforma }) |
