            @Html.DisplayNameFor(model => model.Publicadora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnoLancamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plataforma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
